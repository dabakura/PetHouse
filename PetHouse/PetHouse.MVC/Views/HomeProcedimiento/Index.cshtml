@Html.Hidden("url_DeleteProcedimientos", Url.Action("Delete", "Procedimiento"), htmlAttributes: new { @id = "url_DeleteProcedimientos" })
@Html.Hidden("url_BusquedaTratamientos", Url.Action("Index", "Tratamiento"), htmlAttributes: new { @id = "url_BusquedaTratamientos" })
@Html.Hidden("url_EditTratamientos", Url.Action("Edit", "Tratamiento"), htmlAttributes: new { @id = "url_EditTratamientos" })
@Html.Hidden("url_DetailsTratamientos", Url.Action("Details", "Tratamiento"), htmlAttributes: new { @id = "url_DetailsTratamientos" })
@Html.Hidden("url_DeleteTratamientos", Url.Action("Delete", "Tratamiento"), htmlAttributes: new { @id = "url_DeleteTratamientos" })
@Html.Hidden("url_BusquedaMascota", Url.Action("Buscar", "Home"), htmlAttributes: new { @id = "url_BusquedaMascota" })

