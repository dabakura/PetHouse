@using PetHouse.MVC.Models
@model PetHouse.MVC.Models.PanelProcedimientoViewModel

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Carnet de Vacunas</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body" style="">
        <div class="row form-inline text-center">
            @Html.HiddenFor(model => model.Carnet.ExpedienteId, htmlAttributes: new { @id = "ExpedienteId" })
            @Html.DropDownListFor(model => model.Carnet.VacunaId, (SelectList)ViewBag.VacunasNoAdministradas, htmlAttributes: new { @class = "form-control", @id = "VacunaId" })
            @Html.EditorFor(model => model.Carnet.Fecha_Vacunacion, new { htmlAttributes = new { @class = "form-control", @id = "Fecha_Vacunacion" } })
            <button type="button" class="btn btn-success" id="CreateVacuna"><i class="fa fa-plus"></i></button>
        </div>
        <hr style="margin-top: 9px; margin-bottom: 0px;" />
        <ul class="products-list product-list-in-box" id="lista_vacunas"  style="height:210px; overflow-y:scroll;">
            @foreach (var item in (List<Carnet>)ViewBag.Carnets)
            {
                <li class="item">
                    <div class="product-info" style="margin-left: 0px;">
                        <a href="#" class="product-title">
                            @item.Vacuna.Nombre
                            <span class="label label-warning pull-right">$@item.Vacuna.Precio</span>
                        </a>
                        <span class="product-description">
                            @item.Fecha_Vacunacion.ToShortDateString()
                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>
    <!-- /.box-body -->
</div>