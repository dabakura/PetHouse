@model IEnumerable<PetHouse.MVC.Models.Mascota>


<table id="listado" class="table table-bordered table-hover dataTable">
    <thead>
        <tr role="row">
            <th>
                @Html.DisplayNameFor(model => model.Identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpedienteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Nacimiento)
            </th>
            <th style="text-align: center;">
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Identificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpedienteId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Raza)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Nacimiento)
                </td>
                <td style="text-align: center; min-width: 160px;">
                    <a href="@Url.Action("Edit", "Mascota", new { id = item.Identificacion })" class="btn btn-warning">
                        <i class="fa fa-edit"></i>
                    </a>|
                    <a href="@Url.Action("Details", "Mascota", new { id = item.Identificacion })" class="btn btn-info">
                        <i class="fa fa-search"></i>
                    </a>|
                    <a href="@Url.Action("Delete", "Mascota", new { id = item.Identificacion })" class="btn btn-danger">
                        <i class="fa fa-eraser"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>