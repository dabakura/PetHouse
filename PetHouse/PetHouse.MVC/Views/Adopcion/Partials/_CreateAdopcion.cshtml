@model PetHouse.MVC.Models.Adopcion

<div class="form-horizontal" id="AdopcionPanel">
    <div class="box-body">
        <div class="form-group">
            @Html.LabelFor(model => model.InstitucionId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("InstitucionId", (SelectList)ViewBag.Instituciones, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InstitucionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MascotaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MascotaId", (SelectList)ViewBag.Mascotas, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MascotaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha_Adopcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha_Adopcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha_Adopcion, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <button class="btn btn-primary" id="atras" type="button">Atrás</button>
        <input type="submit" value="Concretar Adopción" class="btn btn-success pull-right" />
    </div>
    <!-- /.box-footer -->
</div>