@model IEnumerable<PetHouse.MVC.Models.Puesto>

@{
    ViewBag.Title = "Puestos";
}

@Html.Partial("Helpers/_ViewError")

<div class="col-sm-12" style="z-index: 1;">
    @Html.ActionLink("Crear nuevo Puesto", "Create", "Puesto", null, new { @class = "btn btn-info  pull-right", style = "margin-bottom:15px" })
</div>

<div class="box">
    <div class="box-body">

        <table id="listado" class="table table-bordered table-hover dataTable">
            <thead>
                <tr role="row">
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th style="text-align: center;">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td style="text-align: center; min-width: 160px;">
                            <a href="@Url.Action("Edit", "Puesto", new { id = item.Id })" class="btn btn-warning">
                                <i class="fa fa-edit"></i>
                            </a>|
                            <a href="@Url.Action("Details", "Puesto", new { id = item.Id })" class="btn btn-info">
                                <i class="fa fa-search"></i>
                            </a>|
                            <a href="@Url.Action("Delete", "Puesto", new { id = item.Id })" class="btn btn-danger">
                                <i class="fa fa-eraser"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>