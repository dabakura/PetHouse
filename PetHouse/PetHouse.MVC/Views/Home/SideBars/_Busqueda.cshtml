<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title" style="font-family: 'Roboto', sans-serif; color: #555;">Buscar Mascota</h3>
        <div class="col-md-12 text-center">
            <img alt="PetHouse" src="~/Content/img/pethouse-logo.jpg" height="100" />
        </div>
    </div>
    @Html.Hidden("Busqueda_Uri", Url.Action("Buscar"), htmlAttributes: new { @id = "Busqueda_Uri" })
    <div class="box-body" style="height: 500px; overflow-y: scroll">
        <div class="col-md-12 text-center form-horizontal">
            <div class="form-group">
                <div class="col-md-8">
                    @Html.Editor("Id", new { htmlAttributes = new { @class = "form-control", id = "Id" } })
                </div>
                <button class="btn btn-success col-md-4" id="Buscar">Buscar</button>
            </div>
            <div id="Cuerpo" class="text-center">

            </div>
        </div>
    </div>
</div>