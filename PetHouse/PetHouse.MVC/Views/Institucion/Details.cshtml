@model PetHouse.MVC.Models.Institucion

@{
    ViewBag.Title = "Detalle";
}

@Html.Partial("Helpers/_ViewError")

<div class="col-md-8 col-md-offset-2">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3>Institución</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="form-horizontal">
            <div class="box-body">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Ced_Juridica)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Ced_Juridica)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Telefono)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Fax)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Fax)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Pag_Web)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Pag_Web)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Correo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Correo)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Domicilio)
                        </dt>

                        <dd>
                            @{string text = (Model.Domicilio.Distrito.Canton.Provincia.Nombre + " " + Model.Domicilio.Distrito.Canton.Nombre + " " + Model.Domicilio.Distrito.Nombre); }
                            @Html.DisplayFor(model => text)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Domicilio.Direccion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Domicilio.Direccion)
                        </dd>
                    </dl>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="form-actions no-color">
                    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-default" })
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-default pull-right" })
                </div>
            </div>
            <!-- /.box-footer -->
        </div>
    </div>
</div>