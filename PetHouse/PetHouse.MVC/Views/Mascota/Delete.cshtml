@model PetHouse.MVC.Models.Mascota

@{
    ViewBag.Title = "Eliminar";
}

@Html.Partial("Helpers/_ViewError")

<div class="col-md-8 col-md-offset-2">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3>Estas seguro(a) de eliminarlo?</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="form-horizontal">
            <div class="box-body">
                <div>
                    <h4>Mascota</h4>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Identificacion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Identificacion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Expediente.Id)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Expediente.Id)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Tipo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Tipo)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Genero)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Genero)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Raza)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Raza)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Fecha_Nacimiento)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Fecha_Nacimiento)
                        </dd>

                        @if (Model.AdopcionId.HasValue)
                        {
                            <dt>
                                @Html.DisplayNameFor(model => model.Adopcion.AdoptanteId)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Adopcion.AdoptanteId)
                            </dd>
                        }

                    </dl>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-default" })
                        <input type="submit" value="Eliminar" class="btn btn-danger pull-right" />
                    </div>
                }
            </div>
            <!-- /.box-footer -->
        </div>
    </div>
</div>