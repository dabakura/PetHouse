@model PetHouse.MVC.Models.Tratamiento

@{
    ViewBag.Title = "Eliminar";
}

@Html.Partial("Helpers/_ViewError")

<div class="col-md-8 col-md-offset-2">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3>Estas seguro(a) de eliminarlo?</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="form-horizontal">
            <div class="box-body">
                <div>
                    <h4>Tratamiento</h4>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Expediente)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ExpedienteId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Fecha)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Fecha)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Empleado)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EmpleadoId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Empleado.Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Empleado.Nombre)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Empleado.Primer_Apellido)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Empleado.Primer_Apellido)
                        </dd>

                        <dd>
                            @{
                                var medicamentos = new SelectList(Model.Medicamentos, "Id", "Nombre");
                                @Html.DropDownListFor(model => model.Medicamentos, medicamentos)
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        @Html.ActionLink("Volver a la lista", "Index", "HomeProcedimiento", null, new { @class = "btn btn-default" })
                        <input type="submit" value="Eliminar" class="btn btn-danger pull-right" />
                    </div>
                }
            </div>
            <!-- /.box-footer -->
        </div>
    </div>
</div>